<ul class="media-list">
  <% articles.each do |article| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(article.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to article.user.name, user_path(article.user) %> <span class="text-muted">posted at <%= article.created_at %></span>
        </div>
        <div>
          <p><%= article.content %></p>
        </div>
        <div>
          <% if current_user == article.user %>
            <%= link_to "Delete", article, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate articles %>
</ul>